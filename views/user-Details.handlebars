<h1 class="text-center">Passengers</h1>
<div class="container">
    <a href="http://localhost/passenger/create" class="btn btn-info">+ New Passenger</a>
    <table class="table table-striped mt-4">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-Mail</th>
            <th>Phone</th>
            <th>Password</th>
        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.id}}</td>
            <td>{{this.dataValues.fname}}</td>
            <td>{{this.dataValues.lname}}</td>
            <td>{{this.dataValues.email}}</td>
            <td>{{this.dataValues.phone}}</td>
            <td>{{this.dataValues.password}}</td>
            <td>
                <a href="http://localhost/passenger/update/{{this.dataValues.id}}">Edit</a> |
                <a href="http://localhost/passenger/delete/{{this.dataValues.id}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
