<h1 class="text-center">Trip</h1>
<div class="container">
    <a href="http://localhost/trip/create" class="btn btn-info">+ New Passenger</a>
    <table class="table table-striped mt-4">
        <tr>
            <th>Id</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Date</th>
            <th>Time</th>
            <th>Mode</th>
            <th>Booking Date</th>
            <th>Passenger ID</th>
        </tr>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.id}}</td>
            <td>{{this.dataValues.source}}</td>
            <td>{{this.dataValues.destination}}</td>
            <td>{{this.dataValues.date}}</td>
            <td>{{this.dataValues.time}}</td>
            <td>{{this.dataValues.mode}}</td>
            <td>{{this.dataValues.bookingdate}}</td>
             <td>{{this.dataValues.PassengerID}}</td>
            <td>
                <a href="http://localhost/trip/update/{{this.dataValues.id}}">Edit</a> |
                <a href="http://localhost/trip/delete/{{this.dataValues.id}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
